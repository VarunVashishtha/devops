pipeline {
    agent any
	
	 tools {
    maven 'Maven'
  }
    stages {
        stage('Build Stage')
        {
            steps
                {
                    sh 'mvn clean'
                }
        }
      
         stage('Testing Stage')
        {
            steps
                {
                    withMaven(maven: 'maven')
                    {
                        sh 'mvn test'
                      
                    }
                }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
